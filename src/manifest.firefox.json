{
  "manifest_version": 2,
  "name": "Open Web Clipper",
  "version": "0.1.0",
  "description": "Capture web pages as Markdown with customizable templates. Open source with flexible API support.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Open Web Clipper"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "downloads",
    "<all_urls>"
  ],
  "web_accessible_resources": ["icons/*"],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Alt+Shift+C"
      },
      "description": "Open Web Clipper"
    },
    "quick_clip": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Quick clip current page"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "open-web-clipper@example.com",
      "strict_min_version": "109.0"
    }
  }
}
